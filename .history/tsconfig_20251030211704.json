{
  "compilerOptions": {
    "baseUrl": "src",              // ðŸ‘ˆ SET this to 'src'
    "paths": {
      "@/*": ["*"]                 // ðŸ‘ˆ This allows '@/lib/xyz' style
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
